
MDScreen:
    name: "potok"
    MDScreenManager:
        id: screen_manager
        MDScreen:
            id: main
            name: "main"
            MDTopAppBar:
                type: "small"
                size_hint_x: 1
                pos_hint: {"center_x": .5, "center_y": 0.97}
                
                MDTopAppBarLeadingButtonContainer:
                    MDActionTopAppBarButton:
                        icon: "menu"
                        on_release: nav_drawer.set_state("toggle")
                
                MDTopAppBarTitle:
                    text: "Home"
                    pos_hint: {"center_x": .3}
        MDScreen:
