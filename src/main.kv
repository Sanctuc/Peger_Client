                    text: "Home"
                    pos_hint: {"center_x": .3}
    MDNavigationDrawer:
        id: nav_drawer
        radius: 0, dp(16), dp(16), 0

        MDNavigationDrawerMenu:
            MDSmartTile:
                pos_hint: {"center_x": .5, "center_y": .5}
                size_hint: None, None
                size: "280dp", "150dp"
                overlap: True

                MDSmartTileImage:
                    source: ""
                    radius: [dp(24), dp(24), 0, 0]

                MDSmartTileOverlayContainer:
                    md_bg_color: 0, 0, 0, .5
                    adaptive_height: True
                    padding: "8dp"
                    spacing: "8dp"
                    radius: [0, 0, dp(24), dp(24)]

                    MDLabel:
                        text: "Peger"
                        theme_text_color: "Custom"
                        text_color: "white"
            MDNavigationDrawerItem:
                on_release: app.screen("account")
                MDNavigationDrawerItemLeadingIcon:
                    icon: "account-circle"

                MDNavigationDrawerItemText:
                    text: "Account"
            MDNavigationDrawerItem:
                on_release: app.screen("main")
                MDNavigationDrawerItemLeadingIcon:
                    icon: "chat"   
                MDNavigationDrawerItemText:
                    text: "Chats"
            MDNavigationDrawerItem:
                on_release: app.screen("archive")
                MDNavigationDrawerItemLeadingIcon:
                    icon: "archive"   
                MDNavigationDrawerItemText:
                    text: "Archive"
            MDNavigationDrawerItem:
                on_release: app.screen("setting")
                MDNavigationDrawerItemLeadingIcon:
                    icon: "cog"

                MDNavigationDrawerItemText:
                    text: "Setting"

            MDNavigationDrawerDivider:
                id: content_box
            MDNavigationDrawerItem:
                on_release: app.screen("wallet")
                MDNavigationDrawerItemLeadingIcon:
                    icon: "wallet-bifold"

                MDNavigationDrawerItemText:
                    text: "Wallet"